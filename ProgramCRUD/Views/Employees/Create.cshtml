@model ProgramCRUD.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<style>
    .required:after {
        content: " *";
        color: red;
        font-size: 20px;
    }
</style>

@* <h3><strong style="background-color: darkred; color: white;">@TempData["Message"]</strong></h3> *@

<h1>ADD NEW EMPLOYEE</h1>

<h4>Employee</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label required"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NIP" class="control-label required"></label>
            <input asp-for="NIP" class="form-control" />
            <span asp-validation-for="NIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birthdate" class="control-label required"></label>
            <input asp-for="Birthdate" type="date" class="form-control" />
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
        <div class="form-group">
            <label asp-for="Telephone" class="control-label required"></label>
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label required">Gender</label>
@*          <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>*@
            <select id="Gender" name="Gender" class="form-control">
                <option value="O">Select One</option>
                <option value="Laki-laki">Laki-laki</option>
                <option value="Perempuan">Perempuan</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label required"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
        </form>
    </div>
</div>

