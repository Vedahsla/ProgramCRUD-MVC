@model ProgramCRUD.Models.Dosen

@{
    ViewData["Title"] = "Create Dosen";
}

<style>
    .required:after {
        content: " *";
        color: red;
    }
    .form-group {
        margin-bottom: 1rem;
    }
</style>

<h1>ADD NEW DOSEN</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DosenID" class="control-label required">DosenID</label>
        <input asp-for="DosenID" class="form-control" />
        <span asp-validation-for="DosenID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label required">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NIP" class="control-label required">NIP</label>
        <input asp-for="NIP" class="form-control" />
        <span asp-validation-for="NIP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telephone" class="control-label required">Telephone</label>
        <input asp-for="Telephone" class="form-control" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label required">Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select one</option>
            <option value="Laki-laki">Laki-laki</option>
            <option value="Perempuan">Perempuan</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label required">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Active" class="form-check-input" type="checkbox" />
        <label asp-for="Active" class="form-check-label">Is Active</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
